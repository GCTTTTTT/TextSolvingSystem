<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo2.dao.UserMapper">
    <select id="queryUserByUp" resultType="com.example.demo2.entity.User">
        select * from users where username = #{username} AND password = #{password}
    </select>

    <select id="queryUserList" resultType="com.example.demo2.entity.User">
        select * from users
    </select>

    <select id="queryUserByUserName" resultType="com.example.demo2.entity.User">
        select * from users where username = #{username}
    </select>

    <insert id="addUser" parameterType="com.example.demo2.entity.User">
        insert into users (username,password) values (#{username},#{password})
    </insert>


</mapper>